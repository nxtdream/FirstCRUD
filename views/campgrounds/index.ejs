<%layout('layouts/boilerplate')%>

<h1>All Campgrounds</h1>

<% for(let campground of campgrounds){%>
<div class="card mb-2" style="max-height: 250px">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="<%= campground.images[0].url%> "
        class="img-fluid rounded-start"
        style="max-height: 250px"
        alt=""
      />
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <div class="card-title"><%= campground.title %></div>
        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">
          Show
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<div class="mt-5 mb-5">
  <a href="/campgrounds/new" class="btn btn-success">Add New</a>
</div>
